# AAC Assistant Configuration
# This file contains all application configuration variables

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8086
FRONTEND_PORT=5176

# Database Configuration
DATABASE_NAME=aac_assistant.db
DATA_DIR=data

# Security Configuration
# CRITICAL: This is a secure random secret key for JWT token signing
# Generate a new one for your installation
JWT_SECRET_KEY=CHANGE_ME_TO_A_SECURE_RANDOM_STRING

# Logging Configuration
LOGS_DIR=logs

# AI Provider Defaults
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=qwen:7b-q4_0

# OpenRouter Configuration (optional)
OPENROUTER_API_KEY=

# Application Settings
APP_NAME=AAC Assistant
APP_VERSION=1.0.0
ENVIRONMENT=development

# Security Settings
FORCE_HTTPS=false
SECURE_COOKIES=false
ALLOWED_ORIGINS=http://localhost:5176,http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173,http://127.0.0.1:5176

# Feature Flags
# ALLOW_DB_RESET: Enable/disable the admin database reset endpoint
# WARNING: Should ALWAYS be false in production!
ALLOW_DB_RESET=false

# Sample Data Seeding (development only)
# Disabled by default for security in public deployments.
AAC_SEED_SAMPLE_DATA=false
# Optional: set deterministic seed passwords only for local demos/tests.
# AAC_SEED_DEFAULT_PASSWORD=
# AAC_SEED_STUDENT1_PASSWORD=
# AAC_SEED_TEACHER1_PASSWORD=
# AAC_SEED_ADMIN1_PASSWORD=

# Bootstrap Admin (first run convenience)
# If no admin exists, the app can create one automatically on first run.
AAC_BOOTSTRAP_ADMIN_ON_FIRST_RUN=true
AAC_BOOTSTRAP_ADMIN_USERNAME=admin1
AAC_BOOTSTRAP_ADMIN_PASSWORD=Admin123
